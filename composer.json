{
    "name": "terminus-plugin-project/terminus-cantilever-plugin",
    "author": "Phil Everton",
    "description": "touch any/all terminus environments",
    "type": "terminus-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": { "Pantheon\\TerminusCantilever\\": "src" }
    },
    "extra": {
        "terminus": {
            "compatible-version": "^2"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.7"
    },
    "scripts": {
        "install-bats": "if [ ! -f bin/bats ] ; then git clone https://github.com/sstephenson/bats.git; mkdir -p bin; bats/install.sh .; fi",
        "bats": "TERMINUS_PLUGINS_DIR=.. bin/bats tests",
        "cs": "phpcs --standard=PSR2 -n src",
        "cbf": "phpcbf --standard=PSR2 -n src",
        "test": [
            "@install-bats",
            "@bats",
            "@cs"
        ]
    }
}
